<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberButtons">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MemoryButtons">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/special_buttons</item>
        <item name="android:textColor">@color/memory_buttons</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpecialButtons">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/special_buttons</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EvenButton">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/neon_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="LinearRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">-10dp</item>
    </style>

    <style name="MainTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom|end</item>
    </style>
</resources>